BUILD_HOME = "/home/user"

# The share state cache is shared between all Eagle builds
SSTATE_DIR ?= "${BUILD_HOME}/yocto-caches/eagle/sstate"

# The download directory is shared between all SeaCloud and Eagle builds
DL_DIR ?= "${BUILD_HOME}/yocto-caches/downloads"

# The download mirror location is shared between all SeaCloud and Eagle builds
SOURCE_MIRROR_URL ?= "file://${BUILD_HOME}/yocto-caches/downloads-mirror"

# The node cache is shared between all builds"
NODE_HOME_CACHE ?= "${BUILD_HOME}/yocto-caches/eagle/node-cache"
